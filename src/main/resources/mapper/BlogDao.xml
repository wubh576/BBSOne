<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bluemsun.BBS.dao.BlogDao">
    <insert id="insertBlog" parameterType="com.bluemsun.BBS.entity.Blog">
        INSERT INTO
		tb_blog(`blog_title`,`blog_plate_id`,`blog_author_id`,`create_time`,`last_edit_time`,`blog_content`)
		VALUES
		(#{blogTitle},#{blogPlateId},#{blogAuthorId},#{createTime},#{lastEditTime},#{blogContent})
    </insert>
    <select id="viewBlogByBlogId" resultType="com.bluemsun.BBS.entity.Blog">
        SELECT `blog_id`,`blog_title`,`blog_author_id`,`create_time`,`blog_content`
		FROM tb_blog
		WHERE blog_id = #{blogId}
    </select>
    <insert id="insertBlogFile" parameterType="com.bluemsun.BBS.entity.BlogFile">
        INSERT INTO
		tb_blog_file(`blog_id`,`url`)
		VALUES
		(#{blogId},#{url})
    </insert>

</mapper>